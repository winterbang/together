/* pages/me/me.wxss */
.group {
  margin-top: 10px;
  padding-left: 20px;
  background: #F5F7FA;
}

.wrap {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #F5F7FA;
  padding: 0 20px;
}

.group .wrap {
  padding-left: 0;
}


.item {
  height: 80rpx;
}

.group .item:not(:last-child) {
  border-bottom: 1px solid #E6E9ED;
}

.normal {
  margin-top: 10px;
  height: 80rpx;
}

.usermotto {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.userinfo-nickname {
  color: #4FC1E9;
}

.user-motto {
  color: #3BAFDA;
  font-size: 14px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.arrow {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.fa {
  color: #AAB2BD;
}

.label {
  color: #656D78;
  font-size: 18px;

}

.label::before {
  margin-right: 10px;
  color: #FFCE54;
}
